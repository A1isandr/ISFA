<reactiveUi:ReactiveUserControl x:Class="ISFA.MVVM.Views.BinaryMatrixCellView"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                                xmlns:local="clr-namespace:ISFA.MVVM.Views"
                                xmlns:reactiveUi="http://reactiveui.net"
                                xmlns:binaryMatrix="clr-namespace:ISFA.MVVM.ViewModels.BinaryMatrix"
                                x:TypeArguments="binaryMatrix:BinaryMatrixCellViewModel"
                                mc:Ignorable="d"
                                Width="50" Height="50"
                                d:DesignHeight="50" d:DesignWidth="50">

    <Label x:Name="Value"
        FontSize="20"
        FontWeight="Medium"
        Foreground="White"
        HorizontalContentAlignment="Center"
        VerticalContentAlignment="Center"
        BorderThickness="1"
        BorderBrush="{StaticResource TableBorderBrush}"
        Background="{StaticResource TableBackgroundBrush}"/>
</reactiveUi:ReactiveUserControl>
