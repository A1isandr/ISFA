<reactiveUi:ReactiveUserControl x:Class="ISFA.MVVM.Views.HelpView"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                                xmlns:local="clr-namespace:ISFA.MVVM.Views"
                                xmlns:reactiveUi="http://reactiveui.net"
                                xmlns:vm="clr-namespace:ISFA.MVVM.ViewModels"
                                x:TypeArguments="vm:HelpViewModel"
                                mc:Ignorable="d"
                                d:DesignHeight="450" d:DesignWidth="800">

    <Border
        Padding="20, 0, 20, 10">

        <Grid>
            <StackPanel>
                <Label
                    Content="Помощь:"
                    FontSize="30"
                    FontWeight="Medium"
                    HorizontalAlignment="Center"
                    Margin="0, 0, 0, 10"/>
                
                <Border
                    Style="{StaticResource TextBorder}">
                    
                    <StackPanel>
                        <Label
                            Content="Общие сведения:"
                            FontSize="20"
                            FontWeight="Medium"
                            HorizontalAlignment="Center"
                            Margin="0, 0, 0, 10"/>
                    </StackPanel>
                </Border>

                <Border
                    Style="{StaticResource TextBorder}">

                    <StackPanel>
                        <Label
                            Content="Бинарная матрица:"
                            FontSize="20"
                            FontWeight="Medium"
                            HorizontalAlignment="Center"
                            Margin="0, 0, 0, 10"/>

                        <TextBlock
                            FontSize="14"
                            FontWeight="Medium"
                            Foreground="White"
                            Margin="0, 10, 0, 0">

                            <Run Foreground="{StaticResource ClearlyCompatibleStateForegroundBrush}">Зеленый</Run>
                            <Run>— явно совместимые состояния.</Run>
                            <LineBreak/>
                            <Run Foreground="{StaticResource ClearlyIncompatibleStateForegroundBrush}">Красный</Run>
                            <Run>— явно несовместимые состояния.</Run>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>

            <Border
                VerticalAlignment="Bottom"
                Style="{StaticResource TextBorder}"
                Margin="0">

                <TextBlock
                    Text="© 2024 Александр Пиданов. Все права защищены."
                    Foreground="White"
                    HorizontalAlignment="Center"/>
            </Border>

            <Button x:Name="BackButton"
                Width="30"
                Height="30"
                Content="{Binding Source={StaticResource ArrowBackIcon}, Path=Geometry}"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Style="{StaticResource TransparentButton}"
                Margin="10, 10, 0, 0"/>
        </Grid>
    </Border>
</reactiveUi:ReactiveUserControl>
